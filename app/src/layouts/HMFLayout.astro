---
import BaseLayout from "./BaseLayout.astro";

import Navbar from "~/components/Navbar.vue";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <header>
    <Navbar client:idle />
    <slot name="header" />
  </header>
  <main>
    <slot />
  </main>
  <footer>
    <slot name="footer" />
  </footer>
</BaseLayout>
